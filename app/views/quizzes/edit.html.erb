<% provide(:title, 'New Quiz') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@quiz) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.submit "Update quiz", class: "btn btn-large btn-primary" %>
    
    <% end %>
  </div>
  <hr>
<ul class="users">
    <% if @quiz.questions.any? %>
      <h3>Questions (<%= @quiz.questions.count %>)</h3>
      <ol class="microposts">
        <%= render @questions %>
      </ol>
      <%= will_paginate @questions %>
    <% end %>
    </ul>
</div>
